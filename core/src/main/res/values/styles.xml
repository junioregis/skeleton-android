<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- SheetView:Start -->
    <style name="SheetView" parent="BaseSheetView"/>

    <style name="SheetView.Header" parent="BaseSheetView.Header"/>

    <style name="SheetView.Header.Title" parent="BaseSheetView.Header.Title"/>

    <style name="SheetView.Row" parent="BaseSheetView.Row"/>

    <style name="SheetView.Col" parent="BaseSheetView.Col"/>
    <!-- SheetView:End -->
</resources>
